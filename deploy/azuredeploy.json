{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "metadata": {
        "description": "The name of the function app that you wish to create."
      }
    },
    "sku": {
      "type": "string",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "defaultValue": "Standard",
      "metadata": {
        "description": "The pricing tier for the hosting plan."
      }
    },
    "workerSize": {
      "type": "string",
      "allowedValues": [
        "0",
        "1",
        "2"
      ],
      "defaultValue": "0",
      "metadata": {
        "description": "The instance size of the hosting plan (small, medium, or large)."
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_ZRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "repoURL": {
      "type": "string",
      "defaultValue": "https://github.com/morsh/functions.git",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    },
    "proxyRepoURL": {
      "type": "string",
      "defaultValue": "https://github.com/morsh/functions.git",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "proxyBranch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    },
    "orchRepoURL": {
      "type": "string",
      "defaultValue": "https://github.com/morsh/functions.git",
      "metadata": {
        "description": "The URL for the GitHub repository that contains the project to deploy."
      }
    },
    "orchBranch": {
      "type": "string",
      "defaultValue": "master",
      "metadata": {
        "description": "The branch of the GitHub repository to use."
      }
    },

    "servicePrincipalClientId": { "type": "string" },
		"servicePrincipalSecret": { "type": "string" },
		"servicePrincipalDomain": { "type": "string" },
		"servicePrincipalSubscriptionId": { "type": "string" },

		"clusterName": { "type": "string" },
		"clusterApiVersion": { "type": "string" },
		"tags": { "type": "string" },
		"clusterVersion": { "type": "string"},
		"osType": { "type": "string" },
		"clusterType": { "type": "string" },
		"clusterLoginUserName": { "type": "string" },
		"clusterLoginPassword": { "type": "string" },

		"clusterNodeSize": { "type": "string" },
		"clusterWorkerNodeCount": { "type": "string" },
		"sshUserName": { "type": "string" },
		"sshPassword": { "type": "string" }, 

		"inputQueueName": { "type": "string" },
		"sendAlertUrl": { "type": "string" },
		"localFileToRun": { "type": "string" },

		"jobExecutionIntervalInSeconds": { 
      "type": "int", 
      "defaultValue": 60
    }     
  },
  "variables": {
    "webAppName": "[parameters('appName')]",
    "proxyAppName": "[concat(parameters('appName'), '-proxy')]",
    "orchAppName": "[concat(parameters('appName'), '-orch')]",
    "hostingPlanName": "[parameters('appName')]",
    "storageAccountName": "[concat(replace(parameters('appName'),'-',''),'store')]"      
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2015-04-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[variables('hostingPlanName')]",
        "sku": "[parameters('sku')]",
        "workerSize": "[parameters('workerSize')]",
        "hostingEnvironment": "",
        "numberOfWorkers": 1
      }
    },
    {
      "apiVersion": "2015-04-01",
      "name": "[variables('webAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-04-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppName'))]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
          ],
          "properties": {
            "WEBSITE_NODE_DEFAULT_VERSION": "4.4.7",

            "STORAGE_ACCOUNT": "[variables('storageAccountName')]",
            "STORAGE_KEY": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]",
            "LOG_STORAGE_ACCOUNT": "[variables('storageAccountName')]",
            "LOG_STORAGE_KEY": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]",
            "LOG_LEVEL": "log",
            "LOG_ENABLED": true,

            "proxyAppName": "[variables('proxyAppName')]",

            "servicePrincipalClientId": "[parameters('servicePrincipalClientId')]",
            "servicePrincipalSecret": "[parameters('servicePrincipalSecret')]",
            "servicePrincipalDomain": "[parameters('servicePrincipalDomain')]",
            "servicePrincipalSubscriptionId": "[parameters('servicePrincipalSubscriptionId')]",

            "clusterName": "[parameters('clusterName')]",
            "clusterApiVersion": "[parameters('clusterApiVersion')]",
            "tags": "[parameters('tags')]",
            "clusterVersion": "[parameters('clusterVersion')]",
            "osType": "[parameters('osType')]",
            "clusterType": "[parameters('clusterType')]",
            "clusterLoginUserName": "[parameters('clusterLoginUserName')]",
            "clusterLoginPassword": "[parameters('clusterLoginPassword')]",

            "clusterNodeSize": "[parameters('clusterNodeSize')]",
            "clusterWorkerNodeCount": "[parameters('clusterWorkerNodeCount')]",
            "sshUserName": "[parameters('sshUserName')]",
            "sshPassword": "[parameters('sshPassword')]",

            "inputQueueName": "[parameters('inputQueueName')]",
            "sendAlertUrl": "[parameters('sendAlertUrl')]",
            "jobExecutionIntervalInSeconds": "[parameters('jobExecutionIntervalInSeconds')]",

            "resourceGroupName": "[resourceGroup().name]",
            "location": "[resourceGroup().location]",
            "clusterStorageAccountName": "[variables('storageAccountName')]",
            "clusterStorageAccountKey": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]"
          }
        },
        {
          "apiVersion": "2015-04-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
          ],
          "properties": {
            "alwaysOn": "true"
          }
        },
        {
          "apiVersion": "2015-04-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
          ],
          "properties": {
            "RepoUrl": "[parameters('repoURL')]",
            "branch": "[parameters('branch')]",
            "IsManualIntegration": false
          }
        }
      ]
    },
    {
      "apiVersion": "2015-04-01",
      "type": "Microsoft.Web/sites",
      "name": "[variables('orchAppName')]",
      "location": "[resourceGroup().location]",
      "kind": "functionapp",
      "properties": {
        "name": "[variables('orchAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "hostingEnvironment": ""
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2015-04-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('orchAppName'))]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
          ],
          "properties": {
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "FUNCTIONS_EXTENSION_VERSION": "latest",
            "WEBSITE_NODE_DEFAULT_VERSION": "4.2.3",

            "STORAGE_ACCOUNT": "[variables('storageAccountName')]",
            "STORAGE_KEY": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]",
            "LOG_STORAGE_ACCOUNT": "[variables('storageAccountName')]",
            "LOG_STORAGE_KEY": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]",
            "LOG_LEVEL": "log",
            "LOG_ENABLED": true,

            "proxyAppName": "[variables('proxyAppName')]",

            "servicePrincipalClientId": "[parameters('servicePrincipalClientId')]",
            "servicePrincipalSecret": "[parameters('servicePrincipalSecret')]",
            "servicePrincipalDomain": "[parameters('servicePrincipalDomain')]",
            "servicePrincipalSubscriptionId": "[parameters('servicePrincipalSubscriptionId')]",

            "clusterName": "[parameters('clusterName')]",
            "clusterApiVersion": "[parameters('clusterApiVersion')]",
            "tags": "[parameters('tags')]",
            "clusterVersion": "[parameters('clusterVersion')]",
            "osType": "[parameters('osType')]",
            "clusterType": "[parameters('clusterType')]",
            "clusterLoginUserName": "[parameters('clusterLoginUserName')]",
            "clusterLoginPassword": "[parameters('clusterLoginPassword')]",

            "clusterNodeSize": "[parameters('clusterNodeSize')]",
            "clusterWorkerNodeCount": "[parameters('clusterWorkerNodeCount')]",
            "sshUserName": "[parameters('sshUserName')]",
            "sshPassword": "[parameters('sshPassword')]",

            "inputQueueName": "[parameters('inputQueueName')]",
            "sendAlertUrl": "[parameters('sendAlertUrl')]",
            "jobExecutionIntervalInSeconds": "[parameters('jobExecutionIntervalInSeconds')]",

            "resourceGroupName": "[resourceGroup().name]",
            "location": "[resourceGroup().location]",
            "clusterStorageAccountName": "[variables('storageAccountName')]",
            "clusterStorageAccountKey": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]"
          }
        },
        {
          "apiVersion": "2015-04-01",
          "name": "web",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('orchAppName'))]"
          ],
          "properties": {
            "alwaysOn": "true"
          }
        },
        {
          "apiVersion": "2015-04-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('orchAppName'))]"
          ],
          "properties": {
            "RepoUrl": "[parameters('orchRepoURL')]",
            "branch": "[parameters('orchBranch')]",
            "IsManualIntegration": false
          }
        }
      ]
    },
    {
      "apiVersion": "2015-04-01",
      "type": "Microsoft.Web/sites",
      "name": "[variables('proxyAppName')]",
      "location": "[resourceGroup().location]",
      "kind": "functionapp",
      "properties": {
        "name": "[variables('proxyAppName')]",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "hostingEnvironment": ""
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ],
      "resources": [
        {
          "apiVersion": "2016-03-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('proxyAppName'))]",
            "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
          ],
          "properties": {
            "AzureWebJobsStorage": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "AzureWebJobsDashboard": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName'),';AccountKey=',listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1,';')]",
            "FUNCTIONS_EXTENSION_VERSION": "latest",
            "WEBSITE_NODE_DEFAULT_VERSION": "4.2.3",

            "servicePrincipalClientId": "[parameters('servicePrincipalClientId')]",
            "servicePrincipalSecret": "[parameters('servicePrincipalSecret')]",
            "servicePrincipalDomain": "[parameters('servicePrincipalDomain')]",
            "servicePrincipalSubscriptionId": "[parameters('servicePrincipalSubscriptionId')]",

            "clusterName": "[parameters('clusterName')]",
            "clusterApiVersion": "[parameters('clusterApiVersion')]",
            "tags": "[parameters('tags')]",
            "clusterVersion": "[parameters('clusterVersion')]",
            "osType": "[parameters('osType')]",
            "clusterType": "[parameters('clusterType')]",
            "clusterLoginUserName": "[parameters('clusterLoginUserName')]",
            "clusterLoginPassword": "[parameters('clusterLoginPassword')]",

            "clusterNodeSize": "[parameters('clusterNodeSize')]",
            "clusterWorkerNodeCount": "[parameters('clusterWorkerNodeCount')]",
            "sshUserName": "[parameters('sshUserName')]",
            "sshPassword": "[parameters('sshPassword')]",

            "inputQueueName": "[parameters('inputQueueName')]",
            "sendAlertUrl": "[parameters('sendAlertUrl')]",
            "localFileToRun": "[parameters('localFileToRun')]",

            "resourceGroupName": "[resourceGroup().name]",
            "location": "[resourceGroup().location]",
            "clusterStorageAccountName": "[variables('storageAccountName')]",
            "clusterStorageAccountKey": "[listkeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2015-05-01-preview').key1]"
          }
        },
        {
          "apiVersion": "2016-03-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('proxyAppName'))]"
          ],
          "properties": {
            "RepoUrl": "[parameters('proxyRepoURL')]",
            "branch": "[parameters('proxyBranch')]",
            "IsManualIntegration": false
          }
        }
      ]
    }
  ]
}